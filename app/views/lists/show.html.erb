<h1><%= @list.name %></h1>

<!-- Mostrar la imagen de la lista, si está adjunta -->
<% if @list.photo.attached? %>
  <%= image_tag @list.photo, size: "400x300" %> <!-- Ajusta el tamaño según lo necesites -->
<% end %>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= image_tag bookmark.movie.poster_url, size: "100x150" %>
      <strong><%= bookmark.movie.title %></strong>: <%= bookmark.comment %>
      <%= button_to "Remove", bookmark_path(bookmark), method: :delete, confirm: "Are you sure?", class: "btn btn-danger" %>
    </li>
  <% end %>
</ul>

<%= link_to "Agregar Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "Back to all lists", lists_path, class: "btn btn-dark" %>
