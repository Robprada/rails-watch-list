
<h1>Add a Movie to <%= @list.name %></h1>

<%= form_with model: [@list, @bookmark], local: true do |form| %>
  <div class="form-group">
    <%= form.label :movie_id, "Choose a Movie" %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title, { prompt: "Select a movie" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment, class: "form-control" %>
  </div>

  <%= form.submit "Add Bookmark", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to list", list_path(@list), class: "btn btn-secondary" %>
